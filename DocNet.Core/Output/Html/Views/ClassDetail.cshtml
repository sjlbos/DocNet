@* Generator: Template  GeneratePrettyNames: true Namespace: DocNet.Razor.Views *@
@using DocNet.Core.Models.CSharp
@using DocNet.Core.Output.Html.Views
@using DocNet.Razor.Helpers
@using DocNet.Core.Models.Comments.Xml
@inherits BodyTemplate<ClassModel>

<!--Name-->
<p><h1>Class: @Model.FullInternalName</h1></p>

<!--Name
    Summary
    Constructors
    Properties
    Methods
    //Explicit Interface Implementations
    Remarks
    Example
    See Also-->

<!--Summary-->
<p>@{CommentTag.RenderSummary(Model.DocComment.Summary);}</p>

<!--Constructors-->
<p>
    <h3>Constructors</h3>
    <table class="table table-bordered table-hover">
        @foreach(ConstructorModel c in Model.Constructors){
            <tr>
                <td>@c.Identifier</td>
                <td>@{CommentTag.RenderSummary(c.DocComment.Summary);}</td>
            </tr>
        }
    </table>
</p>

<!--Properties-->
<p>
    <h3>Properties</h3>
    <table class="table table-bordered table-hover">
        @foreach (PropertyModel p in Model.Properties){
            <tr>
                <td>@p.Identifier</td>
                <td>@{CommentTag.RenderSummary(p.DocComment.Summary);}</td>
            </tr>
        }
    </table>
</p>

<!--Methods-->
<p>
    <h3>Methods</h3>
    <table class="table table-bordered table-hover">
        @foreach (MethodModel m in Model.Methods){
            <tr>
                <td>@m.Identifier</td>
                <td>@{CommentTag.RenderSummary(m.DocComment.Summary);}</td>
            </tr>
        }
    </table>
</p>

<!--Explicit Interface Implementations-->

<!--Remarks-->
<p>
    <h3>Remarks</h3>
    @{CommentTag.RenderRemarks(Model.DocComment.Remarks);}
</p>

<!--Example-->
<p>
    <h3>Example</h3>
    @{CommentTag.RenderExample(Model.DocComment.Example);}
</p>

<!--See Also-->
<p>
    <h3>See Also</h3>
    @{CommentTag.RenderSeeAlso(Model.DocComment.SeeAlso);}
</p>
