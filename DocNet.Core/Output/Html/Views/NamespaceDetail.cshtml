            <tr>
                <td><b>Delegate Name</b></td>
                <td><b>Description</b></td>
            </tr>
            @foreach (DelegateModel d in Model.Delegates){
                <tr>
                    <td>@d.Identifier</td>
                    <td>@if (d.DocComment != null){
                            @{CommentTag.RenderSummary(d.DocComment.Summary);}
                        }</td>
                </tr>
            }
        </table>
    </p>
}

@if (Model.Enums.Any()){
    <!--Enumerations-->
    <p>
        <h3>Enumerations</h3>
        <table class="table table-bordered table-hover">
            <tr>
                <td><b>Enum Name</b></td>
                <td><b>Description</b></td>
            </tr>
            @foreach (EnumModel e in Model.Enums){
                <tr>
                    <td>@e.Identifier</td>
                    <td>@if (e.DocComment != null){
                            @{CommentTag.RenderSummary(e.DocComment.Summary);}
                        }</td>
                </tr>
            }
        </table>
    </p>
}